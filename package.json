{
  "name": "thought-graph-app",
  "version": "1.0.0",
  "description": "A web app for capturing thoughts and visualizing their connections",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "server": "node server.js",
    "dev:server": "concurrently \"npm run dev\" \"npm run server\"",
    "start": "npm run build && npm run server",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,css,md}\"",
    "type-check": "tsc --noEmit",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/assets/*.js",
    "clean": "rm -rf dist node_modules/.vite",
    "deps:update": "npm update && npm audit"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "d3-hierarchy": "^3.1.2",
    "date-fns": "^2.30.0",
    "express": "^4.21.2",
    "fuse.js": "^7.0.0",
    "lucide-react": "^0.294.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-force-graph-2d": "^1.25.4",
    "react-icons": "^4.12.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.1.1",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "prettier": "^3.6.2",
    "vite": "^5.0.0",
    "vite-bundle-analyzer": "^1.1.0"
  }
}
